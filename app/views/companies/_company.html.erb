<h2><%= company.name %></h1>

<table class="table table-condensed">
  <tbody>
    <% company.jobs.each do |job |%>
      <tr>
        <td>
          Position: <%= "#{job.position_name}" %><br>
          ID: <%= "#{job.jobsdb_id}"  %><br>
          About:
          <ul> 
            <% job.position_about['desc'] %>
            <% job.position_about['desc'].each do |desc| %>             
                <li><%= desc %></li>
            <% end %>
          </ul>
          <!-- About: <%#= simple_format job.position_about.gsub(/\n/, '<br>') %> -->
        </td>
      </tr>
    <% end %>
  </tbody>

</table>